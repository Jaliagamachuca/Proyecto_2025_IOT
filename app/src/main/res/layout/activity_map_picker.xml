<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="12dp" android:orientation="vertical">

        <TextView
            android:id="@+id/tvDireccionSel"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Toca el mapa para elegir ubicación"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnMiUbicacion"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Mi ubicación"/>
            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Usar esta ubicación" android:layout_marginStart="12dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
