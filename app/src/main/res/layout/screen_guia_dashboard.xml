<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 游댳 T칤tulo -->
        <TextView
            android:text="@string/tab_dashboard"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 游댲 Secci칩n de gr치ficos -->
        <TextView
            android:text="Gr치ficos de Tours"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 游늵 Gr치fico 1: Tours Disponibles -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartDisponibles"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <!-- 游늵 Gr치fico 2: Tours Pendientes -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartPendientes"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <!-- 游늵 Gr치fico 3: Tours Finalizados -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartFinalizados"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>


        <!-- 游댳 Atajos visuales -->
        <TextView
            android:text="Acciones R치pidas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 游댳 Solicitar Tour -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSolicitarTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgSolicitarTour"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:text="Solicitar nuevo tour"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp" />

                <Button
                    android:id="@+id/btnIrSolicitar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abrir"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 游댳 Tours Pendientes -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPendientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPendientes"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:text="Ver tours pendientes"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp" />

                <Button
                    android:id="@+id/btnIrPendientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abrir"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 游댳 Historial -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgHistorial"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:text="Historial de tours"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp" />

                <Button
                    android:id="@+id/btnIrHistorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abrir"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
