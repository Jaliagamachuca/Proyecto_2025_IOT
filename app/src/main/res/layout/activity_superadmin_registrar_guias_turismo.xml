<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".Activities_Superadmin.Superadmin_Registrar_Guias_Turismo">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloSolicitudes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Solicitudes de Guías"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buscador -->
    <EditText
        android:id="@+id/etBuscarGuiaSolicitud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Buscar guía por nombre o DNI"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/bg_input"
        app:layout_constraintTop_toBottomOf="@id/tvTituloSolicitudes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto cuando no hay solicitudes -->
    <TextView
        android:id="@+id/tvEmptySolicitudes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="No hay solicitudes pendientes de guías."
        android:textSize="14sp"
        android:textColor="#777777"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/etBuscarGuiaSolicitud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lista de solicitudes (solo guías con status=pending) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSolicitudesGuias"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etBuscarGuiaSolicitud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
