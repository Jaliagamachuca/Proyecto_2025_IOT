<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen del tour -->
        <ImageView
            android:id="@+id/ivImagenTour"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/macchupicchu" />

        <!-- Información del tour -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Nombre del tour -->
            <TextView
                android:id="@+id/txtNombreTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tour Machu Picchu"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Empresa -->
            <TextView
                android:id="@+id/txtEmpresaTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inka Expeditions"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="6dp" />

            <!-- Rating y duración -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/txtRatingTour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/warning_color"
                    android:drawableStart="@drawable/ic_star_small"
                    android:drawablePadding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/txtDuracionTour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 días"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Precio -->
            <TextView
                android:id="@+id/txtPrecioTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S/ 350"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>