<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etBuscarTour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buscar tour"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Título -->
    <TextView
        android:id="@+id/Etiqueta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de Tours Realizados"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etBuscarTour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ==== TOUR 1 ==== -->
    <TextView
        android:id="@+id/Tour1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tour1"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/Etiqueta1"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/InfoTour1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="Ver información del tour"
        android:textAllCaps="false"
        android:textColor="#007AFF"
        app:layout_constraintTop_toBottomOf="@id/Tour1"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Valor monetario en lugar de botón "SOLICITAR" -->
    <TextView
        android:id="@+id/precioTour1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S/ 120.00"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/Tour1"
        app:layout_constraintBottom_toBottomOf="@id/InfoTour1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ==== TOUR 2 ==== -->
    <TextView
        android:id="@+id/Tour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tour2"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/InfoTour1"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/InfoTour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="Ver información del tour"
        android:textAllCaps="false"
        android:textColor="#007AFF"
        app:layout_constraintTop_toBottomOf="@id/Tour2"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Valor monetario en lugar de botón "RECHAZAR" -->
    <TextView
        android:id="@+id/precioTour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S/ 150.00"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/Tour2"
        app:layout_constraintBottom_toBottomOf="@id/InfoTour2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnDescargarPDF"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#007AFF"
        android:minHeight="40dp"
        android:paddingHorizontal="16dp"
        android:text="Descargar en formato PDF"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistorial"
        android:layout_width="match_parent" android:layout_height="match_parent"/> -->
</androidx.constraintlayout.widget.ConstraintLayout>