<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:title="Nuevo tour"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPaso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paso 1 de 3"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:id="@+id/flSteps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvPaso"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- PASO 1 -->
        <ScrollView
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TÃ­tulo"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DescripciÃ³n corta"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="Precio por persona"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCupos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Cupos"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- ðŸš© NUEVO: Servicios incluidos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicios adicionales"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/chkDesayuno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desayuno" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/chkAlmuerzo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Almuerzo" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/chkCena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cena" />

                <!-- ðŸš© NUEVO: Idiomas del tour -->
                <TextView
                    android:id="@+id/tvIdiomasLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Idiomas del tour"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:id="@+id/layoutIdiomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chkIdiomaEspanol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EspaÃ±ol" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chkIdiomaIngles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="InglÃ©s"
                        android:layout_marginStart="8dp" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chkIdiomaPortugues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PortuguÃ©s"
                        android:layout_marginStart="8dp" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chkIdiomaFrances"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FrancÃ©s" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chkIdiomaAleman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AlemÃ¡n" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chkIdiomaItaliano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Italiano" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chkIdiomaJapones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JaponÃ©s" />

                </LinearLayout>


                <!-- BotÃ³n imÃ¡genes -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickImgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Seleccionar imÃ¡genes"
                    android:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"/>

                <TextView
                    android:id="@+id/tvImgsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0 imÃ¡genes"/>
            </LinearLayout>
        </ScrollView>

        <!-- PASO 2 -->
        <ScrollView
            android:id="@+id/step2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AÃ±adir punto en mapa"
                    android:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"/>

                <TextView
                    android:id="@+id/tvPuntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0 puntos en ruta"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Fecha de inicio"
                    android:textStyle="bold"/>

                <DatePicker
                    android:id="@+id/dpInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Hora de inicio"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvHoraInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_field"
                    android:padding="12dp"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:text="Seleccionar hora" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Fecha de fin"
                    android:textStyle="bold"/>

                <DatePicker
                    android:id="@+id/dpFin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- HORA FIN -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Hora de fin"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvHoraFin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_field"
                    android:padding="12dp"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:text="Seleccionar hora" />

            </LinearLayout>
        </ScrollView>

        <!-- PASO 3 -->
        <ScrollView
            android:id="@+id/step3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPropuesta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="Propuesta de pago"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- SwitchCompat (compatible con M2) -->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swPorcentaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Â¿Es porcentaje?"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- FOOTER -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="end"
        android:background="?attr/colorSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AtrÃ¡s"
            android:visibility="gone"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
