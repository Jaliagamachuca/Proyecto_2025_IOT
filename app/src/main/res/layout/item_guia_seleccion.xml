<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardGuia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="2dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado: Foto y nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatar circular con TextView -->
            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp">

                <TextView
                    android:id="@+id/ivFotoGuia"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="👤"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="#E0E0E0"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvNombreGuia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan Carlos Pérez"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <!-- Calificación -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvCalificacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"
                        android:layout_marginStart="4dp"/>

                    <TextView
                        android:id="@+id/tvNumTours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(124 tours)"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Idiomas -->
                <TextView
                    android:id="@+id/tvIdiomas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🇪🇸 🇺🇸 🇫🇷"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <!-- Badge de disponibilidad -->
            <TextView
                android:id="@+id/badgeDisponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:background="#C8E6C9"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/badgeOcupado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ocupado"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#E65100"
                android:background="#FFE0B2"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Información adicional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Experiencia -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experiencia"
                    android:textSize="11sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvExperiencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 años"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Tours completados -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tours"
                    android:textSize="11sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvToursCompletados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="124"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Tasa de aceptación -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aceptación"
                    android:textSize="11sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvTasaAceptacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="95%"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Especialidades -->
        <LinearLayout
            android:id="@+id/chipGroupEspecialidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historia"
                android:textSize="11sp"
                android:textColor="#6200EE"
                android:background="#F3E5F5"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gastronomía"
                android:textSize="11sp"
                android:textColor="#6200EE"
                android:background="#F3E5F5"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"/>

        </LinearLayout>

        <!-- Botón de acción -->
        <Button
            android:id="@+id/btnSeleccionarGuia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hacer propuesta"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            style="@style/Widget.Material3.Button"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>