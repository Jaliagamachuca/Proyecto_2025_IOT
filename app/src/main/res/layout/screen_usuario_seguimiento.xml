<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Mapa principal -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Aquí irá Google Maps o MapView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="🗺️ Mapa en tiempo real\n(Google Maps se implementará aquí)"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:padding="32dp" />

    </FrameLayout>

    <!-- FAB para centrar en mi ubicación -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMiUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_person_24"
        app:tint="@color/white"
        app:backgroundTint="@color/primary_color"
        app:layout_anchor="@id/bottomSheetTour"
        app:layout_anchorGravity="top|end"
        android:visibility="gone" />

    <!-- Bottom Sheet con información del tour -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottomSheetContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/bottomSheetTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bottom_sheet_background"
            android:padding="16dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_peekHeight="120dp">

            <!-- Handle del bottom sheet -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@color/text_secondary"
                android:alpha="0.5" />

            <!-- Estado actual del tour -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_person_24"
                    android:background="@drawable/circle_background"
                    android:padding="12dp"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNombreTour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour Cusco Mágico"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/txtEstadoActual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🚌 Actualmente en: Plaza de Armas"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtHoraActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30 AM"
                    android:textSize="12sp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Progreso del tour -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progreso del tour"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progressTour"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="40"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2 de 5 lugares visitados"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/txtTiempoRestante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3h 30min restantes"
                        android:textSize="12sp"
                        android:textColor="@color/primary_color" />
                </LinearLayout>
            </LinearLayout>

            <!-- Lista de destinos del tour -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Itinerario del tour"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItinerario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

            <!-- Información del guía -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person_24"
                        android:background="@drawable/circle_background"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtNombreGuia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carlos Mendoza"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tu guía turístico"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivLlamarGuia"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_support"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCompartirUbicacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Compartir ubicación"
                    android:backgroundTint="@color/secondary_color"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <Button
                    android:id="@+id/btnFinalizarTour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Check-out"
                    android:backgroundTint="@color/primary_color"
                    style="@style/Widget.Material3.Button" />
            </LinearLayout>

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Estado cuando no hay tour activo -->
    <LinearLayout
        android:id="@+id/layoutSinTourActivo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_person_24"
            android:alpha="0.3"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes tours activos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El seguimiento en tiempo real aparecerá cuando inicies un tour"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnBuscarTours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explorar Tours"
            android:backgroundTint="@color/primary_color"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>