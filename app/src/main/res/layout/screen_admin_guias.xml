<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="80dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeaderGuias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gu칤as de turismo"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="16dp"/>

        <!-- KPIs - Estilo similar a Tours -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="3">

            <!-- Gu칤as activos -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="2dp"
                app:strokeColor="#4CAF50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/kpiGuiasActivos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activos"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ofertas pendientes -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="2dp"
                app:strokeColor="#FFC107">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/kpiOfertasPendientes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendientes"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ofertas aceptadas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="2dp"
                app:strokeColor="#9E9E9E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/kpiOfertasAceptadas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#9E9E9E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aceptadas"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Acciones r치pidas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acciones r치pidas"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- Bot칩n Explorar gu칤as -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExplorarGuias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游논 Buscar gu칤as disponibles"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginBottom="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Bot칩n Ver mis ofertas enviadas -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOfertasGuias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游닏 Ver ofertas enviadas"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

        </LinearLayout>

        <!-- Gu칤as recomendados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gu칤as recomendados"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tvContadorGuiasSugeridos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 gu칤as"
                android:textSize="14sp"
                />
        </LinearLayout>

        <!-- RecyclerView de gu칤as sugeridos (horizontal) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGuiasSugeridos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"/>

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/emptyStateGuias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp"
            android:visibility="gone">

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="游녻"
                android:textSize="80sp"
                android:gravity="center"
                android:alpha="0.3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No hay gu칤as disponibles"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Explora el directorio para\nencontrar gu칤as para tus tours"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>