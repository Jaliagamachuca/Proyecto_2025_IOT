<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="80dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeaderGuias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GuÃ­as de turismo"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="16dp"/>

        <!-- KPIs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="3">

            <!-- GuÃ­as activos -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="2dp"
                app:strokeColor="#4CAF50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/kpiGuiasActivos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GuÃ­as activos"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Solicitudes pendientes (antes ofertas pendientes) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="2dp"
                app:strokeColor="#FFC107">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/kpiOfertasPendientes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sol. pendientes"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- GuÃ­as con tours asignados (antes ofertas aceptadas) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="2dp"
                app:strokeColor="#9E9E9E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/kpiOfertasAceptadas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#9E9E9E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GuÃ­as con tours"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Acciones rÃ¡pidas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acciones rÃ¡pidas"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- Ver directorio de guÃ­as -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExplorarGuias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¥ Ver directorio de guÃ­as"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginBottom="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Ver solicitudes de guÃ­as (antes â€œofertas enviadasâ€) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOfertasGuias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¨ Ver solicitudes de guÃ­as"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

        </LinearLayout>

        <!-- Bloque: Solicitudes recientes de guÃ­as -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Solicitudes recientes"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvContadorSolicitudes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 solicitudes"
                android:textSize="14sp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSolicitudesGuias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"/>

        <LinearLayout
            android:id="@+id/emptyStateSolicitudes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“­"
                android:textSize="48sp"
                android:alpha="0.4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="No hay solicitudes de guÃ­as por ahora"
                android:textSize="15sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- GuÃ­as recomendados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GuÃ­as recomendados"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvContadorGuiasSugeridos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 guÃ­as"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- RecyclerView de guÃ­as sugeridos (horizontal) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGuiasSugeridos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"/>

        <!-- Empty state de guÃ­as -->
        <LinearLayout
            android:id="@+id/emptyStateGuias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp"
            android:visibility="gone">

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="ðŸ‘¤"
                android:textSize="80sp"
                android:gravity="center"
                android:alpha="0.3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No hay guÃ­as disponibles"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Explora el directorio para\nencontrar guÃ­as para tus tours"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
