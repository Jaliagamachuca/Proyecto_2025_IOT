<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9FAFB"
    tools:context=".Activities_Guia.Vista_Detalles_Tour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Imagen del Tour -->
        <ImageView
            android:id="@+id/imgTour"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_image_placeholder"
            android:background="@drawable/bg_image_circle"
            android:scaleType="centerCrop" />

        <!-- Título -->
        <TextView
            android:id="@+id/tituloTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles del Tour"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Tarjeta de Detalles -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Nombre de la Empresa -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la Empresa"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <!-- Nombre del Tour -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Tour"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputNombreTour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <!-- Descripción -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:maxLines="3" />

                <!-- Pago Ofrecido -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pago Ofrecido (S/.)"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <!-- Fecha de Inicio -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Inicio"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputFechaInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <!-- Administrador -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrador de la Empresa"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputAdministrador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <!-- Teléfono -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <!-- Estado del Tour -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado del Tour"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Solicitar Tour -->
        <Button
            android:id="@+id/btnSolicitarTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#007AFF"
            android:text="Solicitar Tour"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
