<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9FAFB"
    android:fillViewport="true"
    tools:context=".Activities_Superadmin.Superadmin_Registrar_Guia_Turismo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Foto del guía -->
        <ImageView
            android:id="@+id/imgGuia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/bg_image_circle"
            android:scaleType="centerCrop" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloGuia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revisión de guía"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Tarjeta con datos del guía -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- DNI -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Correo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Teléfono -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Domicilio -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Domicilio"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDomicilio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Idiomas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Idiomas"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputIdiomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Zonas de operación -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zonas de operación"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputZonasOperacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botones Aprobar / Rechazar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnRechazarGuia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#F44336"
                android:text="Rechazar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAprobarGuia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:text="Aprobar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
