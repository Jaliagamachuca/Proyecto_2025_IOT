<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Columna izquierda: logo -->
        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_logo_square">

            <ImageView
                android:id="@+id/ivLogoEmpresa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_business_24"
                android:contentDescription="@string/app_name" />
        </FrameLayout>

        <!-- Columna central: textos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre -->
            <TextView
                android:id="@+id/txtNombreEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inka Expeditions SAC"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#222222"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/txtDescripcionCorta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Tours culturales y de aventura"
                android:textSize="12sp"
                android:textColor="#555555"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- BLOQUE RATING: estrellas + número -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RatingBar
                    android:id="@+id/ratingEmpresa"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/txtRatingNumerico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="0.0"
                    android:textSize="11sp"
                    android:textColor="#444444" />
            </LinearLayout>

            <!-- TEXTO DE RESEÑAS EN LÍNEA PROPIA -->
            <TextView
                android:id="@+id/txtNumeroResenias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="0 reseñas"
                android:textSize="11sp"
                android:textColor="#777777" />

            <!-- Ubicación -->
            <TextView
                android:id="@+id/txtUbicacionEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Cusco, Perú"
                android:textSize="11sp"
                android:textColor="#666666" />

            <!-- Tours disponibles -->
            <TextView
                android:id="@+id/txtToursDisponibles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="0 tours disponibles"
                android:textSize="11sp"
                android:textColor="#888888" />

        </LinearLayout>

        <!-- Columna derecha: botón -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerTours"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            android:text="VER TOURS"
            android:textAllCaps="true"
            android:textSize="12sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="999dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
